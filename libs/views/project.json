{
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "libs/views/src",
    "projectType": "library",
    "targets": {
        "build": {
            "executor": "@nrwl/js:tsc",
            "outputs": [
                "{options.outputPath}"
            ],
            "options": {
                "outputPath": "dist/libs/views",
                "main": "libs/views/src/index.ts",
                "tsConfig": "libs/views/tsconfig.lib.json",
                "assets": [
                    "libs/views/*.md"
                ]
            }
        },
        "lint": {
            "executor": "@nrwl/linter:eslint",
            "outputs": [
                "{options.outputFile}"
            ],
            "options": {
                "lintFilePatterns": [
                    "libs/views/**/*.ts"
                ]
            }
        },
        "test": {
            "executor": "@nrwl/jest:jest",
            "outputs": [
                "coverage/libs/views"
            ],
            "options": {
                "jestConfig": "libs/views/jest.config.ts",
                "passWithNoTests": true
            }
        }
    },
    "tags": [
        "scope:ui"
    ]
}
