{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": ".",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2015",
        "module": "esnext",
        "lib": ["es2017", "dom"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@webtv/config": ["libs/config/src/index.ts"],
            "@webtv/firebase": ["libs/firebase/src/index.ts"],
            "@webtv/trivia": ["libs/config/src/index.ts"],
            "@webtv/views": ["libs/views/src/index.ts"]
        }
    },
    "exclude": ["node_modules", "tmp"]
}
